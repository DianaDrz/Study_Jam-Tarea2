<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    tools:context="com.gdgandroidbolivia.calculadora.MainActivity">
    <ImageView
        android:layout_width="800dp"
        android:layout_height="100dp"
        android:src="@drawable/atomo"
        android:layout_marginTop="20dp"
        android:foregroundGravity="center"/>

    <TextView
        android:id="@+id/texto"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffffff"
        android:textColor="#0b0b0b"
        android:gravity="right"
        android:textSize="32dp"
        android:layout_marginTop="160dp"/>
    <LinearLayout
        android:id="@+id/Layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp">
          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

              <Button
                  android:id="@+id/seno"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@android:color/background_light"
                  android:onClick="seno"
                  android:textSize="17dp"
                  android:text="sin"
                  android:textColor="#302f03" />

              <Button
                  android:id="@+id/numero7"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@android:color/background_light"
                  android:onClick="numero"
                  android:textColor="#060606"
                  android:textSize="30dp"
                  android:text="7" />

              <Button
                  android:id="@+id/numero4"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@android:color/background_light"
                  android:onClick="numero"
                  android:textSize="30dp"
                  android:textColor="#060606"
                  android:text="4" />

              <Button
                  android:id="@+id/numero1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@android:color/background_light"
                  android:onClick="numero"
                  android:textSize="30dp"
                  android:textColor="#060606"
                  android:text="1" />

              <Button
                  android:id="@+id/numero0"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@android:color/background_light"
                  android:onClick="numero"
                  android:textSize="30dp"
                  android:textColor="#060606"
                  android:text="0" />

          </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/cos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:onClick="cos"
                android:text="cos"
                android:textColor="#302f03"
                android:textSize="17dp" />

            <Button
                android:id="@+id/numero8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:onClick="numero"
                android:textSize="30dp"
                android:textColor="#060606"
                android:text="8" />

            <Button
                android:id="@+id/numero5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:onClick="numero"
                android:textSize="30dp"
                android:textColor="#060606"
                android:text="5" />

            <Button
                android:id="@+id/numero2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:onClick="numero"
                android:textSize="30dp"
                android:textColor="#060606"
                android:text="2" />

            <Button
                android:id="@+id/borrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:onClick="borrar"
                android:text="del"
                android:textColor="#ac0a76"
                android:textSize="17dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/tan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:onClick="tan"
                android:text="tan"
                android:textColor="#302f03"
                android:textSize="17dp" />

            <Button
                android:id="@+id/numero9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:onClick="numero"
                android:textSize="30dp"
                android:textColor="#060606"
                android:text="9"
                />

            <Button
                android:id="@+id/numero6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:onClick="numero"
                android:textSize="30dp"
                android:textColor="#060606"
                android:text="6" />

            <Button
                android:id="@+id/numero3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:onClick="numero"
                android:textSize="30dp"
                android:textColor="#060606"
                android:text="3" />

            <Button
                android:id="@+id/igual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:onClick="igual"
                android:textSize="30dp"
                android:textColor="#ac0a76"
                android:text="=" />
            />
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/todo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:onClick="todo"
                android:textColor="#ac0a76"
                android:textSize="17dp"
                android:text="AC" />

            <Button
                android:id="@+id/division"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:textColor="#ac0a76"
                android:onClick="division"
                android:textSize="17dp"
                android:text="/" />

            <Button
                android:id="@+id/multiplicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:onClick="multiplicacion"
                android:textColor="#ac0a76"
                android:textSize="17dp"
                android:text="x" />

            <Button
                android:id="@+id/resta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:onClick="resta"
                android:textColor="#ac0a76"
                android:textSize="18dp"
                android:text="-" />
            />

            <Button
                android:id="@+id/suma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:onClick="suma"
                android:textSize="17dp"
                android:textColor="#ac0a76"
                android:text="+" />
            />

        </LinearLayout>


    </LinearLayout>




</RelativeLayout>
